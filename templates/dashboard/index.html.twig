{% extends 'base.html.twig' %}

{% block title %}Dashboard - RoomBooking{% endblock %}

{% block stylesheets %}
<style>
    .welcome-section {
        margin-bottom: 3rem;
    }
    .welcome-section h1 {
        font-size: 2.5rem;
        font-weight: 800;
        letter-spacing: -0.03em;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, white, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .welcome-section p { color: var(--text-dim); font-size: 1.1rem; }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }
    .stat-card {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .stat-icon {
        width: 48px;
        height: 48px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    .stat-value {
        font-size: 2.25rem;
        font-weight: 800;
        color: white;
    }
    .stat-label {
        color: var(--text-dim);
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
    }

    .section {
        background: var(--bg-card);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        padding: 1.5rem;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: white;
    }

    .room-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 1.25rem;
        margin-bottom: 1rem;
        transition: all 0.3s;
        text-decoration: none;
        display: block;
    }

    .room-card:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: var(--primary);
        transform: translateY(-2px);
    }

    .room-name { font-weight: 700; color: white; margin-bottom: 0.25rem; font-size: 1.1rem; }
    .room-desc { color: var(--text-dim); font-size: 0.85rem; margin-bottom: 0.75rem; }

    .tag-container { display: flex; flex-wrap: wrap; gap: 0.4rem; }
    .tag {
        background: rgba(56, 189, 248, 0.1);
        color: var(--primary);
        padding: 0.2rem 0.6rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .reservation-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 0.75rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        transition: all 0.2s;
    }

    .resa-room { font-weight: 700; color: white; font-size: 0.95rem; }
    .resa-time { color: var(--text-dim); font-size: 0.8rem; }

    .status-badge {
        font-size: 0.65rem;
        font-weight: 800;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        align-self: flex-start;
        text-transform: uppercase;
    }

    @media (max-width: 1024px) {
        .dashboard-grid { grid-template-columns: 1fr; }
    }
</style>
{% endblock %}

{% block body %}
<div class="welcome-section">
    <h1>Salut, {{ app.user.firstname }} !</h1>
    <p>G√©rez vos r√©servations et trouvez votre espace id√©al.</p>
</div>

<div class="stats-grid">
    <div class="glass-card stat-card">
        <div class="stat-icon">üè¢</div>
        <div class="stat-value">{{ rooms|length }}</div>
        <div class="stat-label">Salles</div>
    </div>
    <div class="glass-card stat-card">
        <div class="stat-icon">üìÖ</div>
        <div class="stat-value">{{ reservations|length }}</div>
        <div class="stat-label">Vos r√©servations</div>
    </div>
    <div class="glass-card stat-card">
        <div class="stat-icon">‚ö°</div>
        <div class="stat-value">{{ "now"|date('H:i') }}</div>
        <div class="stat-label">Heure actuelle</div>
    </div>
</div>

<div class="dashboard-grid">
    <div class="section">
        <div class="section-header">
            <h2 class="section-title">Salles disponibles</h2>
            <a href="{{ path('app_reservation_calendar') }}" class="btn-gradient" style="padding: 0.5rem 1rem; font-size: 0.8rem;">R√©server maintenant</a>
        </div>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1rem;">
            {% for room in rooms %}
                <a href="{{ path('app_reservation_new', {id: room.id}) }}" class="room-card">
                    <div class="room-name">{{ room.nomSalle }}</div>
                    <div class="room-desc">Capacit√©: {{ room.capacite }} personnes</div>
                    <div class="tag-container">
                        {% for equip in room.equipements %}
                            <span class="tag">{{ equip.nomEquipement }}</span>
                        {% endfor %}
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="section">
        <div class="section-header">
            <h2 class="section-title">Mes R√©servations</h2>
        </div>
        
        {% for resa in reservations|slice(0, 5) %}
            <div class="reservation-card">
                <div class="resa-room">{{ resa.room.nomSalle }}</div>
                <div class="resa-time">
                    {{ resa.reservationStart|date('d M Y') }}<br>
                    {{ resa.reservationStart|date('H:i') }} - {{ resa.reservationEnd|date('H:i') }}
                </div>
                {% set status = resa.computedStatus %}
                <span class="status-badge" style="
                    {% if status == 'TERMIN√â' %}background:rgba(148, 163, 184, 0.1); color:#94a3b8;
                    {% elseif status == 'ANNUL√â' %}background:rgba(239, 68, 68, 0.15); color:#ef4444;
                    {% else %}background:rgba(56, 189, 248, 0.2); color:#38bdf8;{% endif %}
                ">
                    {{ status }}
                </span>
            </div>
        {% else %}
            <div style="text-align: center; color: var(--text-dim); padding: 2rem;">
                Aucune r√©servation pr√©vue.
            </div>
        {% endfor %}
        
        {% if reservations|length > 5 %}
            <a href="{{ path('app_my_reservations') }}" style="display: block; text-align: center; color: var(--primary); font-size: 0.85rem; font-weight: 700; text-decoration: none; margin-top: 1rem;">Voir tout ‚Üí</a>
        {% endif %}
    </div>
</div>
{% endblock %}

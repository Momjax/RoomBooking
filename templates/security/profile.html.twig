{% extends 'base.html.twig' %}
{% block title %}Mon Profil - RoomBooking{% endblock %}
{% block stylesheets %}
<style>
    .profile-card { background: #1e293b; border-radius: 20px; padding: 3rem; max-width: 500px; margin: 2rem auto; border: 1px solid #334155; }
    .profile-card h1 { color: #f472b6; margin-bottom: 2rem; }
    .info-group { margin-bottom: 1.5rem; }
    .info-group label { display: block; color: #64748b; font-size: 0.85rem; margin-bottom: 0.3rem; }
    .info-group p { font-size: 1.1rem; color: #e2e8f0; font-weight: 600; }
    input { width: 100%; background: #0f172a; border: 2px solid #334155; border-radius: 12px; color: white; padding: 0.8rem; margin-top: 0.5rem; }
    .btn-update { width: 100%; background: #f472b6; color: white; border: none; padding: 1rem; border-radius: 12px; font-weight: 800; cursor: pointer; margin-top: 1.5rem; }
</style>
{% endblock %}
{% block body %}
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <h1>{{ app.user.fullName }}</h1>
</div>

<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
    <!-- Carte Informations -->
    <div style="background: #1e293b; border: 1px solid #334155; border-radius: 16px; padding: 2rem;">
        <div style="background: #0f172a; border-radius: 12px; padding: 1.5rem; text-align: center; margin-bottom: 1.5rem;">
            <div style="color: #94a3b8; font-size: 0.9rem; margin-bottom: 0.3rem;">
                {% if 'ROLE_PROFESSEUR' in app.user.roles %}Classes{% else %}Classe{% endif %}
            </div>
            <div style="font-size: 1.2rem; font-weight: 700;">
                {% if app.user.classe %}
                    {{ app.user.classe.classeName }}
                {% elseif app.user.classesGerees|length > 0 %}
                    {% for c in app.user.classesGerees %}{{ c.classeName }}{% if not loop.last %}<br>{% endif %}{% endfor %}
                {% else %}
                    -
                {% endif %}
            </div>
        </div>

        <div style="margin-bottom: 1.5rem;">
            <div style="color: #94a3b8; font-size: 0.85rem;">Email</div>
            <div style="font-size: 1rem;">{{ app.user.email }}</div>
        </div>

        <form method="post">
            <input type="password" name="password" placeholder="Nouveau mot de passe" style="width: 100%; background: #0f172a; border: 1px solid #334155; border-radius: 8px; color: white; padding: 0.8rem; margin-bottom: 1rem;">
            <button type="submit" style="width: 100%; background: #334155; color: white; padding: 0.7rem; border: none; border-radius: 8px; cursor: pointer; font-size: 0.9rem; font-weight: 600;">Changer mon MDP</button>
        </form>
    </div>

    <!-- Carte Réservations -->
    <div style="background: #1e293b; border: 1px solid #334155; border-radius: 16px; padding: 2rem;">
        <div style="font-weight: 700; margin-bottom: 1.5rem; border-bottom: 1px solid #334155; padding-bottom: 0.5rem;">
            Mes réservations ({{ reservations|length }})
        </div>
        
        <div style="max-height: 300px; overflow-y: auto;">
            {% for res in reservations %}
                <div style="padding: 1rem; border: 1px solid #334155; border-radius: 8px; margin-bottom: 0.8rem;">
                    <div style="font-weight: 600;">{{ res.room.nomSalle }}</div>
                    <div style="color: #94a3b8; font-size: 0.85rem;">
                        {{ res.reservationStart|date('d/m/Y') }} | {{ res.reservationStart|date('H:i') }} - {{ res.reservationEnd|date('H:i') }}
                    </div>
                </div>
            {% else %}
                <div style="text-align: center; color: #64748b; padding: 2rem;">Aucune réservation</div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

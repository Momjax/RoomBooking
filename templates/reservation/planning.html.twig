{% extends 'base.html.twig' %}

{% block title %}Planning - {{ room.nomSalle }}{% endblock %}

{% block stylesheets %}
<style>
    .back-nav { margin-bottom: 2rem; }
    .back-link {
        color: var(--text-dim);
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.2s;
    }
    .back-link:hover { color: var(--primary); }

    .planning-header { margin-bottom: 3rem; }
    .planning-header h1 {
        font-size: 3rem;
        font-weight: 800;
        letter-spacing: -0.04em;
        background: linear-gradient(to right, white, var(--primary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }
    .planning-header p { color: var(--text-dim); font-size: 1.2rem; }

    .timeline-container {
        background: var(--bg-card);
        border: 1px solid var(--glass-border);
        border-radius: 32px;
        padding: 1rem;
        overflow: hidden;
    }

    .time-slot {
        display: grid;
        grid-template-columns: 100px 1fr;
        min-height: 90px;
        border-bottom: 1px solid var(--glass-border);
        transition: background 0.2s;
    }

    .time-slot:last-child { border-bottom: none; }

    .time-label {
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: var(--text-dim);
        font-size: 1.1rem;
        border-right: 1px solid var(--glass-border);
        background: rgba(255, 255, 255, 0.01);
    }

    .slot-content {
        padding: 0.75rem;
        display: flex;
    }

    .booking-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: var(--primary);
        font-weight: 700;
        border: 2px dashed rgba(56, 189, 248, 0.2);
        border-radius: 16px;
        transition: all 0.3s;
        font-size: 0.95rem;
    }

    .booking-btn:hover {
        background: rgba(56, 189, 248, 0.06);
        border-color: var(--primary);
        border-style: solid;
        color: white;
    }

    .reserved-block {
        flex: 1;
        background: rgba(244, 114, 182, 0.1);
        border-left: 4px solid var(--secondary);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        animation: fadeIn 0.5s ease-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateX(-10px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .reserved-info { display: flex; flex-direction: column; gap: 0.2rem; }
    .reserved-title { font-weight: 800; color: var(--secondary); font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em; }
    .user-name { font-weight: 700; color: white; font-size: 1.1rem; }
    .res-time-range { color: var(--text-dim); font-size: 0.85rem; font-weight: 600; }
</style>
{% endblock %}

{% block body %}
<div class="back-nav">
    <a href="{{ path('app_reservation_choose_room', {date: date|date('Y-m-d')}) }}" class="back-link">
        <span>←</span> Retour aux salles
    </a>
</div>

<div class="planning-header">
    <h1>{{ room.nomSalle }}</h1>
    <p>Planning du {{ date|date('d F Y') }}</p>
</div>

<div class="timeline-container">
    {% set hours = 8..19 %}
    {% for hour in hours %}
        {% set reserved = false %}
        {% set reservation_data = null %}

        {% for res in reservations %}
            {% if res.reservationStart|date('H') == hour %}
                {% set reserved = true %}
                {% set reservation_data = res %}
            {% endif %}
        {% endfor %}

        <div class="time-slot">
            <div class="time-label">{{ hour }}h00</div>
            <div class="slot-content">
                {% if reserved %}
                    <div class="reserved-block">
                        <div class="reserved-info">
                            <span class="reserved-title">Occupé</span>
                            <span class="user-name">{{ reservation_data.utilisateur.fullName }}</span>
                        </div>
                        <span class="res-time-range">
                            {{ reservation_data.reservationStart|date('H:i') }} - {{ reservation_data.reservationEnd|date('H:i') }}
                        </span>
                    </div>
                {% else %}
                    <a href="{{ path('app_reservation_new', {id: room.id, date: date|date('Y-m-d'), hour: hour}) }}" 
                       class="booking-btn">
                        + Réserver ce créneau
                    </a>
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}

                <td>
                    {% if user.classe %}{{ user.classe.classeName }}
                    {% elseif user.classesGerees|length > 0 %}{{ user.classesGerees|length }} classe(s) gÃ©rÃ©e(s)
                    {% else %}-{% endif %}
                </td>
                <td>
                    <form method="post" action="{{ path('app_admin_user_reset_password', {id: user.id}) }}" style="display:inline" onsubmit="return confirm('RÃ©initialiser le mot de passe de cet utilisateur ?')">
                        <button class="btn-action btn-reset">Reset MDP</button>
                    </form>
                    {% if user != app.user %}

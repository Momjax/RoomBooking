{% extends 'base.html.twig' %}

{% block title %}Administration - RoomBooking{% endblock %}

{% block stylesheets %}
<style>
    .page-header { margin-bottom: 3rem; }
    .page-header h1 {
        font-size: 3rem;
        font-weight: 800;
        letter-spacing: -0.04em;
        background: linear-gradient(to right, white, var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }
    .page-header p { color: var(--text-dim); font-size: 1.2rem; }

    .admin-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .admin-stat-card {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        transition: all 0.3s;
    }

    .admin-stat-card:hover {
        border-color: var(--accent);
        transform: translateY(-5px);
    }

    .stat-numb { font-size: 3rem; font-weight: 800; color: white; line-height: 1; }
    .stat-text { color: var(--text-dim); font-weight: 700; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 0.1em; margin-top: 0.5rem; }

    .admin-actions {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .action-card {
        background: var(--bg-card);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 2rem;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .action-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: var(--primary);
        transform: scale(1.02);
    }

    .action-icon { font-size: 2rem; margin-bottom: 1rem; }
    .action-title { font-weight: 800; font-size: 1.25rem; color: white; }
    .action-desc { color: var(--text-dim); font-size: 0.9rem; line-height: 1.5; }
</style>
{% endblock %}

